<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="CENTER" spacing="10.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <HBox alignment="CENTER" spacing="5.0">
      <Button mnemonicParsing="false" onAction="#save" styleClass="small-cell">
         <graphic>
            <FontIcon iconLiteral="mdrmz-save" />
         </graphic>
      </Button>
      <Button mnemonicParsing="false" onAction="#cancel" styleClass="small-cell">
         <graphic>
            <FontIcon iconLiteral="mdral-cancel" />
         </graphic>
      </Button>
   </HBox>
   <GridPane alignment="CENTER" hgap="10.0" vgap="5.0">
      <TextField fx:id="link" promptText="Link" GridPane.columnIndex="1" />
      <TextField fx:id="name" promptText="Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <PasswordField fx:id="password" promptText="Passwort" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <FontIcon iconLiteral="mdral-link" />
      <FontIcon iconLiteral="mdsal-account_circle" GridPane.rowIndex="1" />
      <FontIcon iconLiteral="mdral-lock" GridPane.rowIndex="2" />
   </GridPane>
</VBox>
